let content = fs.readdirSync("My_Directory");
console.log(content);

for(let i=0; i<content.length; i++)
{
    console.log("file" + content[i] + "is removed");
    fs.unlinkSync("My_Directory/" + content[i]);
}
fs.rmddirSync("My_Directory");

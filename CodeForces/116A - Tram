    #include <bits/stdc++.h>
    using namespace std;
     
    int main(int argc, char const *argv[])
    {
        int n; cin >> n;
        int a[n], b[n];
        int p=0, max=0;
        for(int i=0; i<n; ++i)
        {
            cin >> a[i] >> b[i];
            p = b[i]-a[i]+p;
            if(max<p) max = p;
        }
     
        cout << max<<"\n";
        return 0;
    }


    #include <bits/stdc++.h>
    using namespace std;
     
    int main(int argc, char const *argv[])
    {
    	string s, s2; cin >> s;
    	for(int i=0; i<s.length(); ++i)
    	{
    		if(s[i] != '+')
    		{
    			s2.push_back(s[i]);
    		}
    	}
     
    	sort(s2.begin(), s2.end());
    	cout << s2[0];
    	for(int i=1; i<s2.length(); ++i)
    	{
    		cout << "+"<<s2[i];
    	}
   
    	return 0;
    }

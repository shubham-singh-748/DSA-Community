    #include <bits/stdc++.h>
    using namespace std;
     
    int main(int argc, char const *argv[])
    {
        string s; cin >> s;
        long long length = s.length();
     
        int count = 0;
        for(int i=0; i<length; ++i)
        {
            if(s[i]=='4' || s[i]=='7')
            {
                count++;
            }
        }
     
        if(count==4 || count==7)
        {
            cout << "YES";
        }
        else
        {
            cout << "NO";
        }
        // cout << count;
    }

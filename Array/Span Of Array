//Write a program to print a number representing max-min.

import java.io.*;
import java.util.*;

public class Main{

public static void main(String[] args) throws Exception {
    // write your code here
    Scanner scn = new Scanner(System.in);
    int n = scn.nextInt();
    int[] arr = new int[n];

    for(int i=0; i<arr.length; i++)
    {
        arr[i] = scn.nextInt();
    }

    int max = arr[0];
    int min = arr[0];

    for(int i=0; i<arr.length; i++)
    {
        if(max < arr[i])
        {
            max = arr[i];
        }
        if(min > arr[i])
        {
            min = arr[i];
        }
    }

    int Span = max - min;
    System.out.println(Span);
 }
}

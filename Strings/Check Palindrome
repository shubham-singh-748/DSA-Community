public class hello {
	public static void main(String[] args) {
		String s = "abc";
		System.out.println(isPalindrome(s));
	}

	private static int isPalindrome(String s) {

	int start = 0;
	int end = s.length();
	while(start < end)
	{
		if(s.charAt(start) != s.charAt(end-1))
		{
			return 0;
		}
		else
		{
			start++;
			end--;
		}
	}
	return 1;
	}
}

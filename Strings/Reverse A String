//WAP to reverse a string.

#include <bits/stdc++.h>
using namespace std;

int main()
{
 string str = "abcdefgh";

 string strRev;

 for(int i=str.length()-1; i>=0; i--)
 {
     strRev += str[i];
 }
 cout << strRev;
}

//OR 
//Both have same solution but implementation is different.

int main()
{
	string str = "abcdefgh";
	string StrRev;

	for(int i=str.size()-1; i >= 0; i--)
	{
		StrRev.push_back(str[i]);
	}
	cout << StrRev;
}
